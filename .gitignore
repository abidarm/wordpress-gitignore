# ignore everything in the root except the "wp-content" directory.
/*
!.gitignore
!.editorconfig
!wp-config-sample.php
!README.md
!CHANGELOG.md
!wp-content/

# Ignore wp-admin & wp-includes
wp-admin/
wp-includes/

# ignore everything in the "wp-content" directory, except:
# "mu-plugins", "plugins", "themes" directory
wp-content/*
!wp-content/mu-plugins/
!wp-content/plugins/
!wp-content/themes/

# ignore these plugins
wp-content/plugins/*
!wp-content/plugins/mw-*
wp-content/plugins/*/vendor/
wp-content/plugins/*/node_modules/
wp-content/plugins/*/dist/

# ignore themes files
wp-content/themes/twenty*
wp-content/themes/index.php
wp-content/themes/*/vendor/
wp-content/themes/*/node_modules/
wp-content/themes/*/dist/

# ignore node dependency directories
node_modules/

# ignore log files and databases
*.log
*.sql
*.sqlite
*.zip
*.txt
